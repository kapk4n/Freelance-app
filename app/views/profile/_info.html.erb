<div id="info">
<%= form_with do |form| %>

  <div class="modal-body">

    <div class="form-group">
      <p>Employment: <%= form.label "#{@freelan.status}", class: "form-label mb-2 mt-3" %>.</p>
    </div>

    <div class="form-group">
      <p>Info: <%= form.text_area "#{@freelan.info}", disabled: true, class: "form-control form-control-lg", value: "#{@freelan.info}" %></p>
    </div>

    <div class="form-group">
      <p>Stack: <%= form.text_area "#{@freelan.stack}", disabled: true, class: "form-control form-control-lg", value: "#{@freelan.stack}" %></p>
    </div>
    
    <div class="form-group">
      <p>Education: <%= form.text_area "#{@freelan.education}", disabled: true, class: "form-control form-control-lg", value: "#{@freelan.education}" %></p>
    </div>

    <div class="form-group">
      <p>Languages: <%= form.text_area "#{@freelan.languag}", disabled: true, class: "form-control form-control-lg", value: "#{@freelan.languag}" %></p>
    </div>

    <div class="form-group">
    <% if @freelan.experienc == '0' %>
      <p>Experience: No experience</p>
    <% else %>
      <p>Experience: <%= form.label "#{@freelan.experienc}", class: "form-label mb-2 mt-3" %> years.</p>
    <%end%>
    </div>
  </div>
<%end%>

  <% unless Current.user.nil? %>
    <% if Current.user.id == @user.id %>
      <%= form_with method: :post, url: profile_edit_path(id: params[:id]) do |form| %>

        <div class="form-group">
          <%= form.submit "Edit", class:"btn btn-primary"%>
        </div>
    <% end %>
  <%end%>


  <% end %>
