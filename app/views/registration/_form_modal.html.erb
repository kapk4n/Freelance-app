<%= turbo_frame_tag :remote_modal, target: :_top do %>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="bs-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> Registration </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
  <%= form_with model: @user, url: sign_up_path do |form| %>
  <div class="modal-body">
    <% if form.object.errors.any? %>
      <div class="alert alert-danger">
        <% form.object.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div> 
    <%end%>



    <div class="form-group">
      <%= form.label 'First Name', class: "form-label mb-2 mt-3" %>
      <%= form.text_field :f_name, class: "form-control form-control-lg", placeholder: "Ivan" %>
    </div>
    <div class="form-group">
      <%= form.label 'Last Name', class: "form-label mb-2 mt-3" %>
      <%= form.text_field :l_name, class: "form-control form-control-lg", placeholder: "Shenfeldt" %>
    </div>
    <div class="form-group">
      <%= form.label 'email', class: "form-label mb-2 mt-3" %>
      <%= form.text_field :email, class:  "form-control form-control-lg", placeholder: "student@bmstu.ru" %>
    </div>
    <div class="form-group">
      <%= form.label 'Password', class: "form-label mb-2 mt-3" %>
      <%= form.password_field :password, class:  "form-control form-control-lg", placeholder: "password"%>
    </div>
    <div class="form-group">
      <%= form.label 'Password Confirmation', class: "form-label mb-2 mt-3" %>
      <%= form.password_field :password_confirmation, class:  "form-control form-control-lg", placeholder: "password" %>
    </div>
        <div class="form-group">
      <%= form.label 'Sex', class: "form-label mb-2 mt-3" %>
      <%= form.select :sex, @users_sexes.each {|i| i}, include_blank: true %>
    </div>
        <div class="form-group">
      <%= form.label 'Role', class: "form-label mb-2 mt-3" %>
      <%= form.select :role, @users_roles.each {|i| i}, include_blank: true %>  
    </div>
      <div class="modal-footer">

      <%= form.submit "Submit", class: "btn btn-primary", data: {action: "click->bs-modal#submitEnd" }, id: 'reg-btn' %>
      </div>
<% end %>
    </div>
  </div>
  </div>
</div>
<% end %>